<h1>
  Movie #<%= @the_movie.id %> details
</h1>
<div>
  <a href="/movies">
    Go back
  </a>
</div>

<div>
  <a href="/delete_movie/<%=@the_movie.id%>">
    Delete Movie
  </a>
</div>

<hr>

<form action="/modify_movie/<%=@the_movie.id%>" method="post">

  <div>
    <label for="Title">Title</label>
    <input id="Title" type="text" name="query_title" value="<%=@the_movie.title%>">
  </div>
  <div>
    <label for="year_box">Year</label>
    <input type="text" name="query_year" id="year_box" value="<%=@the_movie.year%>">
  </div>
  <div>
    <label for="duration_box">Duration</label>
    <input type="text" name="query_duration" id="duration_box" value="<%=@the_movie.duration%>">
  </div>
  <div>
    <label for="description_box">Description</label>
    <textarea name="query_description" id="description_box" rows="3"><%=@the_movie.description%></textarea>
  </div>
  <div>
    <label for="image_box">Image</label>
    <input type="text" name="query_image" id="image_box" value="<%=@the_movie.image%>"> 
  </div>
  <div>
      <label for="director_id_box">Director ID</label>
      <input type="text" name="query_director" id="director_id_box" value="<%=@the_movie.director_id%>">
  </div>
  <button>Update movie</button>
</form>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>
    <% if the_director != nil %>
      <%= the_director.name %>
    <%else%>
      <dt>
        Uh oh! We weren't able to find a director for this movie.
      </dt>
    <%end%>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
